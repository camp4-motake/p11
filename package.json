{
  "name": "p11",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "> 0.5% in JP and last 2 years and not dead"
  ],
  "scripts": {
    "dev": "concurrently 'npx @11ty/eleventy --watch --incremental --quiet' 'parcel \"./.tmp/**/*.html\" --dist-dir dist/ --no-cache'",
    "build": "tsc --noEmit && npx @11ty/eleventy && parcel build \"./.tmp/**/*.html\" --dist-dir dist/ --no-cache --no-source-maps",
    "predev": "npm run clean -s",
    "prebuild": "npm run clean -s",
    "//postbuild": "node relativePath.js",
    "clean": "rimraf dist/* .tmp/*",
    "format": "prettier --write --list-different . && stylelint 'src/**/*.css' --fix && eslint --ignore-path .gitignore . --fix"
  },
  "dependencies": {
    "@alpinejs/intersect": "^3.14.1",
    "alpinejs": "^3.14.1",
    "ress": "^5.0.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@parcel/resolver-glob": "^2.12.0",
    "@types/alpinejs": "^3.13.10",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "parcel": "^2.12.0",
    "parcel-namer-rewrite": "^2.10.3-rc.2",
    "postcss": "^8.4.40",
    "postcss-easy-import": "^4.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sharp": "^0.31.3",
    "stylelint": "16.7.0",
    "stylelint-config-recess-order": "5.0.1",
    "stylelint-config-recommended": "14.0.1"
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true,
      "customMedia": true
    }
  },
  "parcel-namer-rewrite": {
    "chain": "@parcel/namer-default",
    "hashing": "always",
    "disable": false,
    "silent": true,
    "rules": {
      "(.*).(css|js|webp|avif|png|jpe?g|gif|svg|mp4|json)": "assets/$1{.hash}.$2"
    }
  }
}
