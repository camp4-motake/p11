{
  "name": "p11",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20 <=22"
  },
  "scripts": {
    "dev": "concurrently 'node lib/watch.mjs' 'parcel \"./.tmp/**/*.html\" --dist-dir dist'",
    "build": "tsc && npx tsx ./node_modules/.bin/eleventy --config=eleventy.config.ts && parcel build \"./.tmp/**/*.html\" --dist-dir dist --no-cache --no-source-maps",
    "lint": "biome lint src && stylelint 'src/**/*.css'",
    "format": "biome check --write && stylelint 'src/**/*.css' --fix",
    "clean": "rimraf dist/* .tmp/* .parcel-cache",
    "clean:cache": "rimraf .parcel-cache",
    "html:format": "npx js-beautify 'dist/**/*.html' -r -s=2 -L=false -N=false",
    "predev": "npm run clean",
    "prebuild": "npm run clean",
    "//postbuild": "node lib/relativePath.js"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@acab/reset.css": "^0.11.0",
    "@parcel/resolver-glob": "^2.13.2",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "cheerio": "^1.0.0",
    "chokidar": "^4.0.1",
    "concurrently": "^9.1.0",
    "image-size": "^1.1.1",
    "parcel": "^2.13.2",
    "parcel-namer-rewrite": "^2.10.3-rc.2",
    "postcss": "^8.4.49",
    "postcss-easy-import": "^4.0.0",
    "process": "^0.11.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "stylelint": "^16.11.0",
    "stylelint-config-recess-order": "^5.1.1"
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true,
      "customMedia": true
    }
  },
  "postcss": {
    "plugins": {
      "postcss-easy-import": true
    }
  },
  "parcel-namer-rewrite": {
    "chain": "@parcel/namer-default",
    "hashing": "always",
    "disable": false,
    "silent": true,
    "rules": {
      "(.*).(css|js|webp|avif|png|jpe?g|gif|svg|mp4|json)": "assets/$1{.hash}.$2"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recess-order"
    ],
    "rules": {
      "no-descending-specificity": null
    }
  },
  "browserslist": [
    "> 0.5% in JP and last 2 years and not dead"
  ],
  "volta": {
    "node": "22.11.0"
  }
}
