{
  "name": "p11",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "config": {
    "input": "src/",
    "intermediate": ".tmp/",
    "output": "dist/"
  },
  "browserslist": [
    "> 0.5% in JP and last 2 years and not dead"
  ],
  "scripts": {
    "dev": "zx ./build.mjs --watch",
    "build": "tsc --noEmit && zx ./build.mjs",
    "lintFix": "prettier --write --list-different . && stylelint \"src/**/*.css\" --fix && eslint --ignore-path .gitignore . --fix"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@parcel/resolver-glob": "^2.10.3",
    "@types/alpinejs": "^3.13.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "parcel": "^2.10.3",
    "parcel-namer-rewrite": "^2.10.3-rc.2",
    "postcss": "^8.4.31",
    "postcss-easy-import": "^4.0.0",
    "postcss-url": "^10.1.3",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sharp": "^0.31.3",
    "stylelint": "15.11.0",
    "stylelint-config-recess-order": "4.4.0",
    "stylelint-config-recommended": "13.0.0",
    "zx": "^7.2.3"
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true,
      "customMedia": true
    }
  },
  "parcel-namer-rewrite": {
    "chain": "@parcel/namer-default",
    "hashing": "always",
    "disable": false,
    "silent": true,
    "rules": {
      "(.*).(css|js|webp|avif|png|jpg|gif|svg|json)": "assets/$1{.hash}.$2"
    }
  }
}
