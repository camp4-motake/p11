{
  "name": "p11",
  "type": "module",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently 'npx @11ty/eleventy --watch --incremental --quiet' 'parcel \"./.tmp/**/*.html\"'",
    "build": "tsc && npx @11ty/eleventy && parcel build \"./.tmp/**/*.html\" --no-cache --no-source-maps",
    "lint": "eslint . && stylelint 'src/**/*.css'",
    "format": "eslint . --fix && stylelint 'src/**/*.css' --fix",
    "clean": "rimraf dist/* .tmp/*",
    "clean:cache": "rimraf .parcel-cache",
    "predev": "npm run clean && npx @11ty/eleventy",
    "prebuild": "npm run clean",
    "postbuild": "npx prettier --ignore-path /dev/null --print-width 256 --write dist/**/*.html"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0-beta.1",
    "@acab/reset.css": "^0.10.0",
    "@alpinejs/intersect": "^3.14.1",
    "@parcel/resolver-glob": "^2.12.0",
    "@types/alpinejs": "^3.13.10",
    "@types/node": "^22.5.4",
    "@wordpress/browserslist-config": "^6.7.0",
    "alpinejs": "^3.14.1",
    "concurrently": "^9.0.0",
    "image-size": "^1.1.1",
    "parcel": "^2.12.0",
    "parcel-namer-rewrite": "^2.10.3-rc.2",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "postcss": "^8.4.45",
    "postcss-easy-import": "^4.0.0",
    "rimraf": "^6.0.1",
    "sharp": "^0.31.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.4.1",
    "eslint-plugin-format": "^0.1.2",
    "prettier-plugin-jinja-template": "^1.5.0",
    "stylelint": "16.9.0",
    "stylelint-config-recess-order": "5.1.0",
    "stylelint-config-recommended": "14.0.1"
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true,
      "customMedia": true
    }
  },
  "parcel-namer-rewrite": {
    "chain": "@parcel/namer-default",
    "hashing": "always",
    "disable": false,
    "silent": true,
    "rules": {
      "(.*).(css|js|webp|avif|png|jpe?g|gif|svg|mp4|json)": "assets/$1{.hash}.$2"
    }
  },
  "staticFiles": {
    "staticPath": "static"
  },
  "postcss": {
    "plugins": {
      "postcss-easy-import": true
    }
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "volta": {
    "node": "20.16.0",
    "npm": "10.8.2"
  }
}
