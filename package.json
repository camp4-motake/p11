{
  "name": "p11",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "config": {
    "input": "src/",
    "intermediate": ".tmp/",
    "output": "dist/"
  },
  "browserslist": [
    "> 0.5% in JP and last 2 years and not dead"
  ],
  "scripts": {
    "dev": "zx ./build.mjs --watch",
    "build": "tsc && zx ./build.mjs",
    "lintFix": "prettier --write --list-different . && concurrently --raw npm:lintFix:*",
    "lintFix:styles": "stylelint \"src/**/*.css\" --fix",
    "lintFix:scripts": "eslint --ignore-path .gitignore --ext .js,.jsx,.cjs,.mjs,.ts,.tsx . --fix"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@types/alpinejs": "^3.13.5",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "delay-cli": "^2.0.0",
    "parcel": "^2.10.3",
    "parcel-namer-rewrite": "^2.10.3-rc.2",
    "rimraf": "^5.0.5",
    "sharp": "^0.31.3",
    "zx": "^7.2.3"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "prettier": "^3.1.0",
    "stylelint": "15.11.0",
    "stylelint-config-recess-order": "4.4.0",
    "stylelint-config-recommended": "13.0.0"
  },
  "prettier": {
    "semi": false
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 13
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es2022": true
    },
    "rules": {
      "no-unused-vars": "warn"
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "plugins": [
          "@typescript-eslint"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "sourceType": "module"
        },
        "rules": {}
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-recess-order"
    ],
    "rules": {
      "no-descending-specificity": null
    }
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true,
      "customMedia": true
    }
  },
  "parcel-namer-rewrite": {
    "chain": "@parcel/namer-default",
    "hashing": "always",
    "disable": false,
    "silent": true,
    "rules": {
      "(.*).(css|js|webp|avif|png|jpg|gif|svg|json)": "assets/$1.{hash}.$2"
    }
  }
}
