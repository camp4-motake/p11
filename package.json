{
  "name": "p11",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently 'node lib/watch.js' 'parcel \"./.tmp/**/*.html\" --dist-dir dist'",
    "build": "tsc && npx @11ty/eleventy && parcel build \"./.tmp/**/*.html\" --dist-dir dist --no-cache --no-source-maps",
    "lint": "biome lint src && stylelint 'src/**/*.css'",
    "format": "biome check --write && stylelint 'src/**/*.css' --fix",
    "clean": "rimraf dist/* .tmp/* .parcel-cache",
    "clean:cache": "rimraf .parcel-cache",
    "html:format": "npx js-beautify 'dist/**/*.html' -r -s=2 -L=false -N=false",
    "predev": "npm run clean",
    "prebuild": "npm run clean",
    "//postbuild": "node lib/relativePath.js"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@acab/reset.css": "^0.10.0",
    "@alpinejs/intersect": "^3.14.1",
    "@parcel/resolver-glob": "^2.12.0",
    "@types/alpinejs": "^3.13.10",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "alpinejs": "^3.14.1",
    "cheerio": "^1.0.0",
    "chokidar": "^3.6.0",
    "concurrently": "^9.0.1",
    "esbuild-register": "^3.6.0",
    "image-size": "^1.1.1",
    "parcel": "^2.12.0",
    "parcel-namer-rewrite": "^2.10.3-rc.2",
    "postcss": "^8.4.47",
    "postcss-easy-import": "^4.0.0",
    "process": "^0.11.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "sharp": "^0.31.3",
    "tsx": "^4.19.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "stylelint": "16.9.0",
    "stylelint-config-recess-order": "5.1.1",
    "stylelint-config-recommended": "14.0.1"
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true,
      "customMedia": true
    }
  },
  "postcss": {
    "plugins": {
      "postcss-easy-import": true
    }
  },
  "parcel-namer-rewrite": {
    "chain": "@parcel/namer-default",
    "hashing": "always",
    "disable": false,
    "silent": true,
    "rules": {
      "(.*).(css|js|webp|avif|png|jpe?g|gif|svg|mp4|json)": "assets/$1{.hash}.$2"
    }
  },
  "browserslist": ["> 0.5% in JP and last 2 years and not dead"],
  "volta": {
    "node": "20.16.0"
  }
}
