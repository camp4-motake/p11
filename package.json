{
  "name": "p11",
  "type": "module",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently 'npx @11ty/eleventy --watch --incremental --quiet' 'parcel \"./.tmp/**/*.html\"'",
    "build": "tsc && npx @11ty/eleventy && parcel build \"./.tmp/**/*.html\" --no-cache --no-source-maps",
    "lint": "prettier . --check && eslint .",
    "format": "prettier . --write && eslint . --fix",
    "clean": "rimraf dist/* .tmp/* .parcel-cache/*",
    "clean:cache": "rimraf .parcel-cache",
    "predev": "npm run clean",
    "prebuild": "npm run clean",
    "postbuild": "npx prettier './dist/**/*.html' --ignore-path /dev/null --print-width 256 --write"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@acab/reset.css": "^0.10.0",
    "@alpinejs/intersect": "^3.14.3",
    "@parcel/resolver-glob": "^2.13.0",
    "@types/alpinejs": "^3.13.10",
    "@types/node": "^22.9.0",
    "alpinejs": "^3.14.3",
    "concurrently": "^9.1.0",
    "image-size": "^1.1.1",
    "parcel": "^2.13.0",
    "parcel-namer-rewrite": "^2.10.3-rc.2",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "postcss": "^8.4.49",
    "postcss-easy-import": "^4.0.0",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@eslint/js": "9.14.0",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "prettier-plugin-css-order": "2.1.2",
    "prettier-plugin-jinja-template": "^2.0.0",
    "prettier-plugin-organize-imports": "4.1.0",
    "typescript-eslint": "8.14.0"
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true,
      "customMedia": true
    }
  },
  "parcel-namer-rewrite": {
    "chain": "@parcel/namer-default",
    "hashing": "always",
    "disable": false,
    "silent": true,
    "rules": {
      "(.*).(css|js|webp|avif|png|jpe?g|gif|svg|mp4|json)": "assets/$1{.hash}.$2"
    }
  },
  "staticFiles": {
    "staticPath": "static"
  },
  "postcss": {
    "plugins": {
      "postcss-easy-import": true
    }
  },
  "browserslist": [
    "> 0.5% in JP and last 2 years and not dead"
  ],
  "volta": {
    "node": "22.11.0"
  }
}
